<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
	var myTable,old;
	$(document).ready(function(){
   		myTable = $("#myTable").DataTable();
    	$('#myTable').on( 'click', 'tbody tr td', function () {
    		var dat = $('.active').val();
    		if(!dat){
    		   myTable.cell(this).data(dat);
    		   dat = myTable.cell(this).data();
    		   old = dat;
    		   myTable.cell(this).data('<input type="text" class="active" value="'+dat+'"/>')
    		}
    		
		});
		$('#myTable').on( 'mouseleave', 'tbody tr td', function () {
			var dat = $('.active').val();
			myTable.cell(this).data(dat);
			if(dat){
				if(old != dat){
					console.log('nge');
				}
			}
			
		});
	});
</script>
<div class="container">
    <body>
    	
    	<link rel="stylesheet" href="{{ asset('build/css/bootstrap.min.css') }}">
    	<!-- <link rel="stylesheet" href="{{ asset('build/dataTables.editor.min.js') }}"> -->
    	
    	<table id="myTable" class="table">
    		<thead>
    			<tr>
	    		<th>Name</th>
	    		<th>Email</th>
	    		<th>Gender</th>
	    		<th>Description</th>
	    		<th></th>
