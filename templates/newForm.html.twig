<!DOCTYPE html>
<html>
<link rel="stylesheet" href="{{ asset('build/app.css') }}">
 
<div class="container-fluid">
    <body>
    	<div class="header">
    	<ul class="nav nav-tabs">
		  <li class="nav-item">
		    <a class="nav-link" href="/">Home <span class="badge" id="index"><span class="glyphicon glyphicon-new-window"></a>
		  </li>
		  <li class="nav-item active">
		    <a class="nav-link" href="/form">Form</a>
		  </li>
		  <li class="nav-item">
		    <a class="nav-link" href="/users/list">List <span class="badge" id="list"><span class="glyphicon glyphicon-new-window"></a>
		  </li>
		</ul>
    	</div>
    	<div class="mycontent">
	    {{ form_start(form, {attr: {class: 'form'} }) }}
	    <div class="form-group">
	    {{ form_row(form.name,{attr: {class: 'form-control'} }) }}
		</div>
	    {{ form_row(form.email,{attr: {class: 'form-control'} }) }}
